---
const siteTitle = 'Agent Economy';
const siteDescription = 'Curated news and insights about the AI agent economy';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{siteTitle}</title>
    <meta name="description" content={siteDescription}>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Geist:wght@300;400;500;600&display=swap" rel="stylesheet">
    <style is:global>
        :root {
            --font-sans: 'Geist', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            
            /* Light mode colors (default) */
            --color-bg: #fafafa;
            --color-text: #171717;
            --color-text-secondary: #525252;
            --color-text-muted: #737373;
            --color-border: #e5e5e5;
            --color-card-bg: #ffffff;
            --color-hover: #f5f5f5;
            
            --max-width: 680px;
            --space-xs: 0.5rem;
            --space-sm: 1rem;
            --space-md: 1.5rem;
            --space-lg: 2.5rem;
            --space-xl: 4rem;
        }
        
        /* Dark mode colors */
        [data-theme="dark"] {
            --color-bg: #0a0a0a;
            --color-text: #fafafa;
            --color-text-secondary: #a3a3a3;
            --color-text-muted: #737373;
            --color-border: #262626;
            --color-card-bg: #171717;
            --color-hover: #262626;
        }
        
        /* Respect system preference if no manual choice */
        @media (prefers-color-scheme: dark) {
            :root:not([data-theme]) {
                --color-bg: #0a0a0a;
                --color-text: #fafafa;
                --color-text-secondary: #a3a3a3;
                --color-text-muted: #737373;
                --color-border: #262626;
                --color-card-bg: #171717;
                --color-hover: #262626;
            }
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        html {
            font-size: 16px;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }
        
        body {
            font-family: var(--font-sans);
            font-weight: 400;
            line-height: 1.6;
            color: var(--color-text);
            background: var(--color-bg);
            letter-spacing: -0.01em;
            transition: background-color 0.3s ease, color 0.3s ease;
        }
        
        a {
            color: inherit;
            text-decoration: none;
            transition: opacity 0.2s ease;
        }
        
        a:hover {
            opacity: 0.6;
        }
        
        header {
            padding: var(--space-xl) var(--space-md) var(--space-md);
            max-width: var(--max-width);
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: baseline;
        }
        
        header h1 {
            font-size: 1.25rem;
            font-weight: 600;
            letter-spacing: -0.02em;
        }
        
        header h1 a {
            color: var(--color-text);
        }
        
        .header-controls {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }
        
        .lang-switch {
            display: flex;
            gap: 0.5rem;
            font-size: 0.875rem;
        }
        
        .lang-switch button {
            background: none;
            border: none;
            padding: 0.25rem 0.5rem;
            cursor: pointer;
            color: var(--color-text-muted);
            font-family: inherit;
            font-size: inherit;
            transition: all 0.2s ease;
        }
        
        .lang-switch button:hover {
            color: var(--color-text);
        }
        
        .lang-switch button.active {
            color: var(--color-text);
            font-weight: 500;
        }
        
        .theme-toggle {
            background: none;
            border: 1px solid var(--color-border);
            border-radius: 50%;
            width: 32px;
            height: 32px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--color-text-secondary);
            font-size: 0.875rem;
            transition: all 0.2s ease;
        }
        
        .theme-toggle:hover {
            border-color: var(--color-text);
            color: var(--color-text);
        }
        
        nav {
            max-width: var(--max-width);
            margin: 0 auto;
            padding: 0 var(--space-md) var(--space-lg);
            display: flex;
            gap: var(--space-md);
        }
        
        nav a {
            font-size: 0.875rem;
            color: var(--color-text-secondary);
            font-weight: 400;
        }
        
        nav a:hover {
            color: var(--color-text);
            opacity: 1;
        }
        
        main {
            max-width: var(--max-width);
            margin: 0 auto;
            padding: 0 var(--space-md) var(--space-xl);
        }
        
        footer {
            max-width: var(--max-width);
            margin: 0 auto;
            padding: var(--space-xl) var(--space-md);
            border-top: 1px solid var(--color-border);
        }
        
        footer p {
            font-size: 0.8125rem;
            color: var(--color-text-muted);
        }
        
        footer a {
            color: var(--color-text-secondary);
        }
        
        article {
            margin-bottom: var(--space-xl);
        }
        
        article h2 {
            font-size: 1.5rem;
            font-weight: 500;
            line-height: 1.3;
            margin-bottom: var(--space-xs);
            letter-spacing: -0.02em;
        }
        
        article h2 a {
            color: var(--color-text);
        }
        
        article time {
            display: block;
            font-size: 0.8125rem;
            color: var(--color-text-muted);
            margin-bottom: var(--space-sm);
        }
        
        article p {
            color: var(--color-text-secondary);
            font-size: 0.9375rem;
            line-height: 1.7;
            margin-bottom: var(--space-sm);
        }
        
        .tags {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }
        
        .tags span {
            font-size: 0.75rem;
            color: var(--color-text-muted);
            background: transparent;
            padding: 0;
        }
        
        .tags span::before {
            content: '#';
        }
        
        .intro {
            margin-bottom: var(--space-xl);
            padding-bottom: var(--space-xl);
            border-bottom: 1px solid var(--color-border);
        }
        
        .intro h2 {
            font-size: 1.75rem;
            font-weight: 500;
            line-height: 1.3;
            margin-bottom: var(--space-sm);
            letter-spacing: -0.02em;
        }
        
        .intro p {
            font-size: 1rem;
            color: var(--color-text-secondary);
            line-height: 1.7;
        }
        
        .page-title {
            font-size: 2rem;
            font-weight: 500;
            margin-bottom: var(--space-lg);
            letter-spacing: -0.03em;
        }
        
        .article-content {
            font-size: 1rem;
            line-height: 1.8;
        }
        
        .article-content h1 {
            font-size: 2rem;
            font-weight: 500;
            margin-bottom: var(--space-sm);
            letter-spacing: -0.02em;
        }
        
        .article-content h3 {
            font-size: 1.25rem;
            font-weight: 500;
            margin-top: var(--space-lg);
            margin-bottom: var(--space-sm);
            color: var(--color-text);
        }
        
        .article-content time {
            display: block;
            font-size: 0.8125rem;
            color: var(--color-text-muted);
            margin-bottom: var(--space-lg);
        }
        
        .article-content p {
            font-size: 1rem;
            line-height: 1.8;
            margin-bottom: var(--space-md);
            color: var(--color-text);
        }
        
        .article-content a {
            color: var(--color-text);
            text-decoration: underline;
            text-underline-offset: 0.2em;
            text-decoration-thickness: 1px;
            opacity: 0.8;
        }
        
        .article-content a:hover {
            opacity: 0.6;
        }
        
        .article-content ul {
            font-size: 1rem;
            line-height: 1.8;
            margin-bottom: var(--space-md);
            margin-left: var(--space-md);
        }
        
        .article-content li {
            font-size: 1rem;
            line-height: 1.8;
            margin-bottom: var(--space-xs);
            color: var(--color-text);
        }
        
        .back-link {
            display: inline-block;
            margin-top: var(--space-xl);
            font-size: 0.875rem;
            color: var(--color-text-secondary);
        }
        
        .lang-content {
            display: none;
        }
        
        .lang-content.active {
            display: block;
        }
        
        /* Company cards dark mode support */
        .company-card {
            background: var(--color-card-bg);
            border-color: var(--color-border);
        }
        
        .company-card:hover {
            border-color: var(--color-text);
        }
        
        .filter-btn {
            border-color: var(--color-border);
            color: var(--color-text-secondary);
        }
        
        .filter-btn:hover {
            border-color: var(--color-text);
            color: var(--color-text);
        }
        
        .filter-btn.active {
            background: var(--color-text);
            color: var(--color-bg);
            border-color: var(--color-text);
        }
        
        @media (max-width: 640px) {
            header {
                padding: var(--space-lg) var(--space-md) var(--space-sm);
                flex-direction: column;
                gap: var(--space-sm);
            }
            
            .header-controls {
                width: 100%;
                justify-content: flex-end;
            }
            
            .intro h2 {
                font-size: 1.5rem;
            }
            
            article h2 {
                font-size: 1.25rem;
            }
        }
    </style>
</head>
<body>
    <header>
        <h1><a href="/">Agent Economy</a></h1>
        <div class="header-controls">
            <button class="theme-toggle" onclick="toggleTheme()" aria-label="Toggle theme">
                <span class="theme-icon-light">☀</span>
                <span class="theme-icon-dark" style="display: none;">☾</span>
            </button>
            <div class="lang-switch">
                <button onclick="switchLang('zh')" id="btn-zh" class="active">中</button>
                <button onclick="switchLang('en')" id="btn-en">EN</button>
            </div>
        </div>
    </header>
    
    <nav>
        <a href="/" data-zh="文章" data-en="Articles">Articles</a>
        <a href="/companies" data-zh="公司" data-en="Companies">Companies</a>
        <a href="/about" data-zh="关于" data-en="About">About</a>
        <a href="/rss.xml">RSS</a>
    </nav>
    
    <main>
        <slot />
    </main>
    
    <footer>
        <p data-zh="关于 AI 智能体和自主经济的精选洞察。" data-en="Curated insights on AI agents and the autonomous economy.">
            Curated insights on AI agents and the autonomous economy. <a href="/rss.xml">Subscribe via RSS</a>.
        </p>
    </footer>
    
    <script is:inline>
        (function() {
            // Theme handling
            var savedTheme = localStorage.getItem('theme');
            var prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
            
            function applyTheme(theme) {
                if (theme === 'dark' || (!theme && prefersDark)) {
                    document.documentElement.setAttribute('data-theme', 'dark');
                    document.querySelector('.theme-icon-light').style.display = 'none';
                    document.querySelector('.theme-icon-dark').style.display = 'inline';
                } else {
                    document.documentElement.removeAttribute('data-theme');
                    document.querySelector('.theme-icon-light').style.display = 'inline';
                    document.querySelector('.theme-icon-dark').style.display = 'none';
                }
            }
            
            window.toggleTheme = function() {
                var currentTheme = document.documentElement.getAttribute('data-theme');
                var newTheme = currentTheme === 'dark' ? 'light' : 'dark';
                localStorage.setItem('theme', newTheme);
                applyTheme(newTheme);
            };
            
            // Initialize theme
            applyTheme(savedTheme);
            
            // Language handling
            window.currentLang = localStorage.getItem('preferred-lang') || 'zh';
            
            window.switchLang = function(lang) {
                window.currentLang = lang;
                localStorage.setItem('preferred-lang', lang);
                window.updateLanguage();
            };
            
            window.updateLanguage = function() {
                var btnZh = document.getElementById('btn-zh');
                var btnEn = document.getElementById('btn-en');
                if (btnZh) btnZh.classList.toggle('active', window.currentLang === 'zh');
                if (btnEn) btnEn.classList.toggle('active', window.currentLang === 'en');
                
                document.querySelectorAll('[data-zh][data-en]').forEach(function(el) {
                    el.textContent = el.getAttribute('data-' + window.currentLang);
                });
                
                document.querySelectorAll('.lang-content').forEach(function(el) {
                    el.classList.toggle('active', el.classList.contains('lang-' + window.currentLang));
                });
            };
            
            // Initialize
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', function() {
                    window.updateLanguage();
                });
            } else {
                window.updateLanguage();
            }
        })();
    </script>
</body>
</html>
