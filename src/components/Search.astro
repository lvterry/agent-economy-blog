---
// Search component using Pagefind
---

<div id="search" class="search-container">
  <input 
    type="text" 
    id="search-input"
    placeholder="搜索文章... / Search articles..." 
    class="search-input"
  />
  <div id="search-results" class="search-results" style="display: none;"></div>
</div>

<script is:inline>
  // Pagefind search initialization
  (async function() {
    const input = document.getElementById('search-input');
    const resultsContainer = document.getElementById('search-results');
    
    if (!input || !resultsContainer) {
      console.error('Search elements not found');
      return;
    }
    
    let pagefind;
    try {
      pagefind = await import('/pagefind/pagefind.js');
      console.log('Pagefind loaded successfully');
    } catch (err) {
      console.error('Failed to load pagefind:', err);
      input.placeholder = 'Search unavailable / 搜索不可用';
      return;
    }
    
    input.addEventListener('input', async (e) => {
      const query = e.target.value.trim();
      
      if (query.length < 2) {
        resultsContainer.innerHTML = '';
        resultsContainer.style.display = 'none';
        return;
      }
      
      try {
        const search = await pagefind.search(query);
        const results = search.results.slice(0, 5);
        
        if (results.length === 0) {
          resultsContainer.innerHTML = '<p class="search-no-results">No results / 无结果</p>';
        } else {
          resultsContainer.innerHTML = '';
          for (const result of results) {
            const data = await result.data();
            const link = document.createElement('a');
            link.href = data.url;
            link.className = 'search-result';
            link.innerHTML = `
              <h4>${data.meta?.title || 'Untitled'}</h4>
              <p>${data.excerpt || ''}</p>
            `;
            resultsContainer.appendChild(link);
          }
        }
        resultsContainer.style.display = 'block';
      } catch (err) {
        console.error('Search error:', err);
      }
    });
  })();
</script>

<style>
  .search-container {
    margin-bottom: var(--space-lg);
    position: relative;
  }
  
  .search-input {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    background: var(--color-card-bg);
    color: var(--color-text);
    font-family: var(--font-sans);
    font-size: 0.9375rem;
    transition: border-color 0.2s ease;
  }
  
  .search-input:focus {
    outline: none;
    border-color: var(--color-text-secondary);
  }
  
  .search-input::placeholder {
    color: var(--color-text-muted);
  }
  
  .search-results {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    margin-top: 0.5rem;
    background: var(--color-card-bg);
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    max-height: 300px;
    overflow-y: auto;
    z-index: 100;
  }
  
  .search-result {
    display: block;
    padding: 0.75rem 1rem;
    border-bottom: 1px solid var(--color-border);
    text-decoration: none;
  }
  
  .search-result:last-child {
    border-bottom: none;
  }
  
  .search-result:hover {
    background: var(--color-hover);
    opacity: 1;
  }
  
  .search-result h4 {
    font-size: 0.9375rem;
    font-weight: 500;
    margin-bottom: 0.25rem;
    color: var(--color-text);
  }
  
  .search-result p {
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    margin: 0;
    line-height: 1.5;
  }
  
  .search-no-results {
    padding: 1rem;
    text-align: center;
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }
</style>
