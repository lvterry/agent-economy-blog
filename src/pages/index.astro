---
import Layout from '../layouts/Layout.astro';
import BlogPost from '../components/BlogPost.astro';

const posts = [
  {
    slug: 'ai-hires-humans',
    titleZh: 'AI 雇佣人类：智能体经济的新范式',
    titleEn: 'AI Hires Humans: A New Paradigm in the Agent Economy',
    excerptZh: 'Rent a Human 提出颠覆性概念：AI 智能体雇佣人类完成物理任务，揭示人机关系的根本性转变。',
    excerptEn: 'Rent a Human introduces a disruptive concept where AI agents hire humans for physical tasks, marking a fundamental shift in human-machine relationships.',
    date: '2026-02-09',
    tags: ['AI-Agents', 'Agent-Economy', 'Future-of-Work'],
    source: 'Rent a Human'
  },
  {
    slug: 'google-announced-agent-payments-protocol-ap2',
    titleZh: 'Google 发布 Agent Payments Protocol (AP2)',
    titleEn: 'Google Announced Agent Payments Protocol (AP2)',
    excerptZh: 'Google 发布 AP2 协议，一个建立在 A2A 之上的开放标准，支持 AI 智能体之间的安全支付交易。',
    excerptEn: 'Google announced AP2, an open protocol built on A2A that enables secure payment transactions between AI agents.',
    date: '2026-02-09',
    tags: ['Google', 'AP2', 'Agent-Economy'],
    source: 'Google Cloud Blog'
  },
  {
    slug: 'anthropic-model-context-protocol',
    titleZh: 'Anthropic 发布 Model Context Protocol (MCP)',
    titleEn: 'Anthropic Introduces Model Context Protocol (MCP)',
    excerptZh: 'Anthropic 开源 MCP，一个连接 AI 助手与数据系统的开放标准，解决 AI 与数据孤岛隔离的问题。',
    excerptEn: 'Anthropic open-sources MCP, an open standard connecting AI assistants to data systems, solving the isolation between AI and data silos.',
    date: '2024-11-25',
    tags: ['Anthropic', 'MCP', 'AI-Standards'],
    source: 'Anthropic'
  }
];
---

<Layout>
  <section class="intro">
    <div class="lang-content lang-zh active">
      <h2>关于 AI 智能体和自主经济的精选洞察。</h2>
    </div>
    <div class="lang-content lang-en">
      <h2>Curated news and insights about AI agents and the autonomous economy.</h2>
    </div>
  </section>

  <section>
    {posts.map(post => (
      <BlogPost {...post} />
    ))}
  </section>
</Layout>
