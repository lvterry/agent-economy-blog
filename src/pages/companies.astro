---
import Layout from '../layouts/Layout.astro';
import { companies, categories } from '../data/companies';
---

<Layout>
  <section class="intro">
    <div class="lang-content lang-zh active">
      <h2>AI 行业领先公司</h2>
      <p>探索塑造智能体经济的核心企业，从基础设施提供商到应用开发者。</p>
    </div>
    <div class="lang-content lang-en">
      <h2>Leading AI Companies</h2>
      <p>Explore the core enterprises shaping the agent economy, from infrastructure providers to application developers.</p>
    </div>
  </section>

  <section class="companies-section">
    <!-- Category Filter -->
    <div class="category-filter">
      {categories.map(cat => (
        <button 
          class={`filter-btn ${cat.id === 'all' ? 'active' : ''}`} 
          data-category={cat.id}
          data-name-en={cat.nameEn}
          data-name-zh={cat.nameZh}
        >
          <span class="lang-zh active">{cat.nameZh}</span>
          <span class="lang-en">{cat.nameEn}</span>
        </button>
      ))}
    </div>

    <!-- Companies Grid -->
    <div class="companies-grid">
      {companies.map(company => (
        <a 
          href={company.website} 
          target="_blank" 
          rel="noopener noreferrer" 
          class="company-card"
          data-category={company.category}
        >
          <div class="company-logo">
            <img src={company.logo} alt={`${company.name} logo`} loading="lazy" />
          </div>
          <div class="company-info">
            <h3 class="company-name">{company.name}</h3>
            <span class="company-category">
              <span class="lang-zh active">{company.categoryZh}</span>
              <span class="lang-en">{company.category}</span>
            </span>
            <p class="company-description">
              <span class="lang-content lang-zh active">{company.descriptionZh}</span>
              <span class="lang-content lang-en">{company.descriptionEn}</span>
            </p>
          </div>
        </a>
      ))}
    </div>
  </section>
</Layout>

<style>
  .category-filter {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: var(--space-lg);
    padding-bottom: var(--space-md);
    border-bottom: 1px solid var(--color-border);
  }

  .filter-btn {
    background: transparent;
    border: 1px solid var(--color-border);
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    font-family: var(--font-sans);
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.2s ease;
    color: var(--color-text-secondary);
  }

  .filter-btn:hover {
    border-color: var(--color-text);
    color: var(--color-text);
  }

  .filter-btn.active {
    background: var(--color-text);
    color: var(--color-bg);
    border-color: var(--color-text);
  }

  .filter-btn span {
    display: none;
  }

  .filter-btn span.active {
    display: inline;
  }

  .companies-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--space-md);
  }

  .company-card {
    display: flex;
    flex-direction: column;
    padding: var(--space-md);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    transition: all 0.2s ease;
    background: var(--color-card-bg);
  }

  .company-card:hover {
    border-color: var(--color-text);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    opacity: 1;
  }

  .company-card.hidden {
    display: none;
  }

  .company-logo {
    width: 48px;
    height: 48px;
    margin-bottom: var(--space-sm);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .company-logo img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .company-info {
    flex: 1;
  }

  .company-name {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
    letter-spacing: -0.01em;
  }

  .company-category {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-sm);
    display: block;
  }

  .company-category span {
    display: none;
  }

  .company-category span.active {
    display: inline;
  }

  .company-description {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
  }

  @media (max-width: 640px) {
    .companies-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script is:inline>
  (function() {
    // Category filtering
    const filterBtns = document.querySelectorAll('.filter-btn');
    const companyCards = document.querySelectorAll('.company-card');

    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const category = btn.dataset.category;
        
        // Update active button
        filterBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        
        // Filter companies
        companyCards.forEach(card => {
          if (category === 'all' || card.dataset.category === category) {
            card.classList.remove('hidden');
          } else {
            card.classList.add('hidden');
          }
        });
      });
    });

    // Language switch support for filter buttons
    const originalSwitchLang = window.switchLang;
    if (originalSwitchLang) {
      window.switchLang = function(lang) {
        originalSwitchLang(lang);
        
        // Update filter button text
        document.querySelectorAll('.filter-btn span').forEach(el => {
          el.classList.toggle('active', el.classList.contains('lang-' + lang));
        });
        
        // Update category labels on cards
        document.querySelectorAll('.company-category span').forEach(el => {
          el.classList.toggle('active', el.classList.contains('lang-' + lang));
        });
      };
    }
  })();
</script>
